# Video Rendering Engine Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# =============================================================================
# AI & LLM Configuration
# =============================================================================

# OpenAI API Key (for script generation, Director AI analysis)
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic API Key (optional, for Claude-based analysis)
# Get your key at: https://console.anthropic.com/
ANTHROPIC_API_KEY=

# =============================================================================
# Stock Footage APIs
# =============================================================================

# Pexels API Key (for stock video search)
# Get your free key at: https://www.pexels.com/api/
PEXELS_API_KEY=your-pexels-api-key-here

# Pixabay API Key (alternative stock footage source)
# Get your free key at: https://pixabay.com/api/docs/
PIXABAY_API_KEY=

# =============================================================================
# Storage & Database
# =============================================================================

# Storage Backend (sqlite | memory)
STORAGE_BACKEND=sqlite
DATABASE_PATH=data/app.db

# Dev Mode (auto-auth for browser testing)
DEV_BROWSER_MODE=false

# Idempotency (requires Idempotency-Key header for /render POST)
# Keys are scoped per-user and stored in SQLite

# Admin Authentication
ADMIN_SECRET=your-secure-admin-secret-here

# Redis
RENDER_CELERY_BROKER_URL=redis://localhost:6379/0
RENDER_CELERY_RESULT_BACKEND=redis://localhost:6379/1

# Video Settings
RENDER_VIDEO_WIDTH=1080
RENDER_VIDEO_HEIGHT=1920
RENDER_VIDEO_FPS=30
RENDER_VIDEO_CODEC=libx264
RENDER_VIDEO_BITRATE=8000k

# Audio Settings
RENDER_BGM_VOLUME_DB=-20.0
RENDER_VOICE_VOLUME_DB=0.0
RENDER_AUDIO_CODEC=aac
RENDER_AUDIO_BITRATE=192k

# Subtitle Settings
RENDER_SUBTITLE_FONT=Arial-Bold
RENDER_SUBTITLE_FONT_SIZE=70
RENDER_SUBTITLE_COLOR=white
RENDER_SUBTITLE_ACTIVE_COLOR=#FFD700
RENDER_SUBTITLE_STROKE_COLOR=black
RENDER_SUBTITLE_STROKE_WIDTH=3
RENDER_SUBTITLE_MAX_CHARS_PER_LINE=35

# FFmpeg
RENDER_FFMPEG_THREADS=4
RENDER_FFMPEG_PRESET=medium

# Paths
RENDER_TEMP_DIR=/tmp/video_rendering
RENDER_OUTPUT_DIR=/tmp/video_output

# Cost Tracking (USD)
CPU_COST_PER_SECOND=0.0005
STORAGE_COST_PER_MB=0.00002
GPU_COST_PER_SECOND=0.002
BANDWIDTH_COST_PER_MB=0.00001
